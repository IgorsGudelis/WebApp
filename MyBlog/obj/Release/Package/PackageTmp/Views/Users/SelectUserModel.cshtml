@using MyBlog.Models.Users
@model SelectUserModel

    <div class="form-group">
        <label class="control-label col-lg-3">LastName</label>
        <div class="col-lg-8">
            @Html.TextBoxFor(x => x.LastName, new {@class = "form-control js-lastNameEdit"})
            @Html.ValidationMessageFor(x => x.LastName)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-3">FirstName</label>
        <div class="col-lg-8">
            @Html.TextBoxFor(x => x.FirstName, new {@class = "form-control js-firstNameEdit", id = ""})
            @Html.ValidationMessageFor(x => x.FirstName)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-3">Email</label>
        <div class="col-lg-8">
            @Html.TextBoxFor(x => x.Email, new {@class = "form-control js-eMailEdit"})
            @Html.ValidationMessageFor(x => x.Email)
        </div>
    </div>

    @Html.HiddenFor(x => x.ID, new { @class = "form-control js-Id" })