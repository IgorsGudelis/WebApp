@using MyBlog.Models.Users
@model ListUsers

<h3 class="text-center">List of Users</h3>
<table id="tableUsers" class="table table-striped table-bordered">
    <thead>
        <tr class="myTh">
            <th>ID</th>
            <th>LastName</th>
            <th>FirstName</th>
            <th>Email</th>
            <th>Edit</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var i in @Model.AllUsers)
        {
            <tr class="text-right" id="userRow_@(i.ID)">
                <td class="text-center">@i.ID</td>
                <td>@i.LastName</td>
                <td>@i.FirstName</td>
                <td>@i.Email</td>
                <td>
                    <a data-id="@i.ID" class="editUserLink"><i class="glyphicon glyphicon-pencil"></i></a>

                    <a data-id="@i.ID" class="deleteUserLink glyphicon"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>



